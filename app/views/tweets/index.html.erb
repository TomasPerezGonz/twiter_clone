<p style="color: green"><%= notice %></p>

<div class="container mt-4">
  <h1>Tweets</h1>

   <%= link_to "New tweet", new_tweet_path, class: 'btn btn-primary mt-3 mb-3' %>

  <%= form_with(url: "/tweets", method: "get", class: 'form-inline my-2 my-lg-0') do %>
    <%= text_field_tag :search, params[:search], class: 'form-control mr-sm-2 mb-3', placeholder: 'Search' %>
    
    <%= submit_tag "Search", name: nil, class: 'btn btn-outline-success my-2 my-sm-0' %>
  <% end %>

  <div id="tweets" class="mt-4">
    <% @tweets.each do |tweet| %>
      <div class="card mb-3">
        <div class="card-body">
          <h5 class="card-title"><%= tweet.user_name %></h5>
          <p class="card-text"><%= tweet.description %></p>
          <%= link_to "Show this tweet", tweet, class: 'btn btn-primary' %>
        </div>
      </div>
    <% end %>
  

<%= raw pagy_bootstrap_nav(@pagy) %>